{
  "name": "sass-variables-helper",
  "displayName": "Sass Variables Helper",
  "description": "A Tree View of your Sass colors variables",
  "version": "0.1.3",
  "publisher": "Nkzq",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sassVariables"
  ],
  "main": "./out/extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "SASS Variables",
          "icon": "media/color.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "sassVariables",
          "name": "Colors"
        }
      ]
    },
    "commands": [
      {
        "command": "sassVariables.refreshEntry",
        "title": "SASS Variables: Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "sassVariables.nameColor",
        "title": "SASS Variables: Name a color"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sassVariables.refreshEntry",
          "when": "view == sassVariables",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "SASS Variables Helper",
      "properties": {
        "sassVariablesHelper.route": {
          "type": [
            "string",
            "array"
          ],
          "default": [],
          "description": "Set the route of your sass variables files"
        },
        "sassVariablesHelper.showColorValue": {
          "type": "boolean",
          "default": false,
          "description": "Whether to show the color's value when displaying the color name"
        },
        "sassVariablesHelper.shouldCopyColor": {
          "type": "boolean",
          "default": false,
          "description": "If true copies the scss variable name, if false copies the color"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nkzq/sass-variables-helper"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "@types/fs-extra": "9.0.1",
    "@types/glob": "^7.1.1",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^7.0.2",
    "@types/node": "14.0.13",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.46.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "glob": "^7.1.6",
    "husky": "4.2.5",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "color-names-cli": "1.1.0",
    "common-dir": "3.0.0",
    "copy-paste": "^1.3.0",
    "fs-extra": "9.0.1",
    "ftp": "^0.3.10",
    "jsonc-parser": "^0.4.2",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "scss-colors": "1.0.1"
  }
}
